<?xml version="1.0" encoding="utf-8" ?>
<widget id="itvisors.customtextbox.CustomTextBox" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Custom Text Box</name>
    <description>Custom text box</description>
    <icon/>
    <properties>
        <property key="dataAttr" type="attribute">
            <caption>Attribute</caption>
            <category>Data source</category>
            <description></description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>

        <property key="keyboardType" type="enumeration" defaultValue="default">
            <caption>Keyboard type</caption>
            <category>Configuration</category>
            <description>The keyboard type to use.</description>
            <enumerationValues>
                <enumerationValue key="default">Default alphanumeric</enumerationValue>
                <enumerationValue key="numeric">Numeric input</enumerationValue>
                <enumerationValue key="emailAddress">Email address</enumerationValue>
            </enumerationValues>
        </property>

        <property key="multiLine" type="boolean" defaultValue="false">
            <caption>Multiline</caption>
            <category>Configuration</category>
            <description></description>
        </property>

        <property key="numberOfLines" type="integer" defaultValue="5">
            <caption>Number of lines</caption>
            <category>Configuration</category>
            <description>For multiline, the number of lines to show</description>
        </property>

        <property key="autoFocus" type="boolean" defaultValue="false">
            <caption>Auto focus</caption>
            <category>Configuration</category>
            <description>If true, requests focus on this widget. Be sure to configure only one widget on a page with this property set to true!</description>
        </property>

        <property key="showAsPassword" type="boolean" defaultValue="false">
            <caption>Show as password</caption>
            <category>Configuration</category>
            <description></description>
        </property>

        <property key="onChangeAction" type="action" required="false">
            <caption>On change action</caption>
            <category>Configuration</category>
            <description>The onChange fires with every character entered</description>
        </property>

        <systemProperty key="Visibility"/>
        <systemProperty key="Editability"/>
    </properties>
</widget>
